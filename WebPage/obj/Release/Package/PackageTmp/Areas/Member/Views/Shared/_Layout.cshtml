@using System
@using Common
@using Common.Others
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/Control")
    @RenderSection("style", required: false)
    @Scripts.Render("~/bundles/Control")
    @RenderSection("scripts", required: false)

    <style type="text/css">
        #Timg {
            width: 100%;
            height: 15%;
            background-image: url("/timg.jpg");
            background-repeat: no-repeat;
            background-size: cover;
        }
        body {
            background: #E8E8E8;
            font: 12px/1.5 Tahoma,Helvetica,Arial,'宋体',sans-serif;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" style="background: #3B3B3B !important;">
        <div id="Timg"></div>
        <div class="container">
            <div class="navbar-header">
                <span style="font-weight: bold; font-size: 30px; color: #FFFFFF;">@(((WebInfo) ViewBag.WebInfo).BlogName) </span>&nbsp;&nbsp;&nbsp;<br/>
                &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;  <span style="font-weight: bold; font-size: 15px; color: #FFFFFF;">-生活不止有眼前的苟且，还有未来的诗和苟且 </span>;
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div style="font-size: 20px; font-weight: bold; float: right" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a style="color: #FFFFF0" href="/Member/Home/Index"><span class="glyphicon glyphicon-home"></span> 主页 </a>
                    </li>
                    <li class="dropdown">
                        <a style="color: #FFFFF0" href="/Member/Home/About"><span class="glyphicon glyphicon-tasks"></span> 关于</a>
                    </li>
                    <li class="dropdown">
                        <a style="color: #FFFFF0" href="/Member/Home/LeaveMsg"><span class="glyphicon glyphicon-heart-empty"></span> 留言 </a>
                    </li>

                    @{
                        if (CurrUser.IsLogin)
                        {
                            <li class="dropdown">
                                <a style="color: #FFFFF0" href="/Member/Home/Out" ><span class=" glyphicon glyphicon-hand-left"></span>登出 <span style="font-size: 8px">@CurrUser.UserName</span>          </a>
                            </li>
                        }
                        else
                        {
                            <li class="dropdown">
                                <a style="color: #FFFFF0" href="/Member/User/Login"><span class="glyphicon glyphicon-hand-right"></span> 登录 </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-lg-9 ">@RenderBody()</div>
            <div class="col-lg-3 ">@RenderSection("SideNav", false)</div>
        </div>
        <hr />
        <footer id="zyn-footer">
            <div class="container " style="color: #FCFCFC">
                Copyright © 2016 <a href="#">@(((WebInfo)ViewBag.WebInfo).BlogName) </a>&nbsp; | &nbsp;联系我 :
                <a href="#">@(((WebInfo)ViewBag.WebInfo).CallMe)</a>&nbsp; | &nbsp;All Rights Reserved.&nbsp; | &nbsp;XXXXXXXXXXXXXXXX
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
<!--页脚版权声明-->


</html>